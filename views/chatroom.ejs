<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Chat with <%= chatUser.Name %></title>
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <header>
    <div>
      <h1>Chat with <%= chatUser.Name %></h1>
      <a href="/interface">Back</a>
    </div>
  </header>
  <main>
    <div id="message-container">
      <% if (messages.length > 0) { %>
        <% messages.forEach(m => { %>
          <% const isSentByCurrentUser = m.sender.toString() === currentUser._id.toString(); %>
          <div style="align-self: <%= isSentByCurrentUser ? 'flex-end' : 'flex-start' %>;">
            <div title="<%= isSentByCurrentUser ? 'You' : chatUser.Name %>">
              <%= isSentByCurrentUser ? currentUser.Name.charAt(0).toUpperCase() : chatUser.Name.charAt(0).toUpperCase() %>
            </div>

            <div>
              <div><%= m.message %></div>
              <div>
                <%= new Date(m.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No messages yet. Start the conversation!</p>
      <% } %>
    </div>


    <form id="chat-form">
      <input
        id="message-input"
        type="text"
        placeholder="Type your message..."
        autocomplete="off"
        required
      />
      <button type="submit" aria-label="Send message">Send</button>
    </form>
  </main>

<script>
  const socket = io();
  const cuid = '<%= currentUser._id %>';
  const chuid = '<%= chatUser._id %>';
  const cui = '<%= currentUser.Name.charAt(0).toUpperCase() %>';
  const chui = '<%= chatUser.Name.charAt(0).toUpperCase() %>';

  socket.emit('joinroom', { userId: cuid, otheruserId: chuid });
  const messageContainer = document.getElementById('message-container');
  const chatForm = document.getElementById('chat-form');
  const messageInput = document.getElementById('message-input');

  function appendMessage(data) {
    const isSentByCurrentUser = data.senderId === cuid;

    const wrapper = document.createElement('div');
    wrapper.style.alignSelf = isSentByCurrentUser ? 'flex-end' : 'flex-start';

    const avatar = document.createElement('div');
    avatar.title = isSentByCurrentUser ? 'You' : '<%= chatUser.Name %>';
    avatar.textContent = isSentByCurrentUser ? cui : chui;

    const bubble = document.createElement('div');

    const messageText = document.createElement('div');
    messageText.textContent = data.message;

    const timestamp = document.createElement('div');
    const time = new Date(data.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
    timestamp.textContent = time;

    bubble.appendChild(messageText);
    bubble.appendChild(timestamp);

    wrapper.appendChild(avatar);
    wrapper.appendChild(bubble);
    messageContainer.appendChild(wrapper);
    messageContainer.scrollTop = messageContainer.scrollHeight;
  }

  chatForm.addEventListener('submit', (e) => {
    e.preventDefault();
    const message = messageInput.value.trim();
    if (!message) return;

    socket.emit('chatMessage', {
      senderId: cuid,
      receiverId: chuid,
      message
    });
    messageInput.value = '';
    messageInput.focus();
  });

  socket.on('message', (data) => {
    if ((data.senderId === cuid && data.receiverId === chuid) ||
        (data.senderId === chuid && data.receiverId === cuid)) {
      appendMessage(data);
    }
  });

  messageContainer.scrollTop = messageContainer.scrollHeight;
</script>

</body>
</html>
